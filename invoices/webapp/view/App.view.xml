
<mvc:View
        controllerName="invoices.controller.App"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">

        <Shell>

                <App>
                        <pages>
                                <Page>

                                        <customHeader>
                                                <Bar>
                                                        <contentLeft>
                                                                <Title text="{i18n>appTitle}"/>
                                                        </contentLeft>
                                                </Bar>
                                        </customHeader>

                                        <!-- <headerContent>
                                                <Title text="Header"/>
                                        </headerContent> -->

                                        <content>

                                                <Panel  headerText="{i18n>helloPanel}" 
                                                        class="sapUiResponsiveMargin" 
                                                        expandable="true" 
                                                        expanded="true">
                                                        <Button class="sapUiSmallMarginEnd"  
                                                                text="{i18n>showHelloButtonText}"  
                                                                press="onShowHello"/>
                                                        <Input  class="sapUiSmallMarginEnd"  
                                                                value="{/recipient/name}"
                                                                valueLiveUpdate="true"
                                                                width="60%"/>
                                                        <Text text="Hello {/recipient/name}"
                                                                class="sapUiSmallMarginEnd boldElements"/>
                                                </Panel>

                                        </content>

                                </Page>
                        </pages>
                </App>

        </Shell>


</mvc:View>