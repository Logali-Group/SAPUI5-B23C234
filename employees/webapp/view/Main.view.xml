<mvc:View
        controllerName="employees.controller.Main"
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc">

        <Shell id="shell">

            <App id="app">

                <pages>

                    <Page showHeader="false">
                    
                        <content>

                            <f:FlexibleColumnLayout id="fcl"
                                                        backgroundDesign="Solid"
                                                        layout="{jsonLayout>/ActiveKey}">
                                <f:beginColumnPages>
                                    <mvc:XMLView id="masterEmployeeView"
                                                    viewName="employees.view.MasterEmployee"
                                                    type="XML"/>
                                </f:beginColumnPages>

                                <f:midColumnPages>
                                    <mvc:XMLView id="detailsEmployeeView"
                                                    viewName="employees.view.DetailsEmployee"
                                                    type="XML"/>
                                </f:midColumnPages>

                                <f:endColumnPages>
                                    <Page>

                                    </Page>
                                </f:endColumnPages>

                            </f:FlexibleColumnLayout>
                        
                        </content>


                        <footer>

                            <Toolbar>

                                <Label text="{i18n>layout}" 
                                            class="sapUiSmallMargin"/>
                                <Select items="{jsonLayout>/Layout}"
                                        selectedKey="{jsonLayout>/ActiveKey}">
                                    <core:Item key="{jsonLayout>Key}"
                                                text="{jsonLayout>Text}"/>
                                </Select>
                            </Toolbar>
                        
                        </footer>

                    </Page>

                </pages>

            </App>

        </Shell>


</mvc:View>