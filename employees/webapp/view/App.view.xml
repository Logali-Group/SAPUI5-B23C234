<mvc:View controllerName="employees.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>

                            <HBox>
                                <Label text="{i18n>labelEmployee}"
                                        class="sapUiSmallMargin"/>
                                <Input id="inputEmployee"
                                        width="12.5rem"
                                        class="sapUiSmallMarginEnd"
                                        liveChange="onFilter"
                                        value="{jsonCountries>/EmployeeId}"
                                        valueLiveUpdate="true"/>
                                <Label id="label"
                                        text="{i18n>labelCountry}"
                                        class="sapUiSmallMargin"/>
                                <Select id="select"
                                        class="sapUiSmallMarginEnd"
                                        forceSelection="false"
                                        selectedKey="{jsonCountries>/CountryKey}"
                                        items="{jsonCountries>/ListCountry}">
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                                </Select>
                                <Button id="btnFilter"
                                        text="{i18n>btnFilter}"
                                        icon="sap-icon://search"
                                        press="onFilter"
                                        class="sapUiSmallMarginEnd"/>
                                <Button id="btnClearFilter"
                                        text="{i18n>btnClearFilter}"
                                        icon="sap-icon://clear-filter"
                                        press="onClear"
                                        class="sapUiSmallMarginEnd"/>
                            </HBox>

                            <HBox>
                                <Panel>

                                    <Button id="btnShowCity"
                                            class="sapUiSmallMarginEnd"
                                            text="{i18n>showCity}"
                                            visible="{jsonConfig>/visibleBtnShowCity}"
                                            press="onShowCity"/>

                                    <Button id="btnHideCity"
                                            class="sapUiSmallMarginEnd"
                                            text="{i18n>hideCity}"
                                            visible="{jsonConfig>/visibleBtnHideCity}"
                                            press="onHideCity"/>

                                    
                                    <Table id="tableEmployee"
                                            items="{jsonEmployees>/Employees}">

                                        <columns>
                                            <Column visible="{jsonConfig>/visibleID}">
                                            <header>
                                            <Label text="{i18n>tableId}"/>
                                            </header>
                                                
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleName}">
                                                <Label text="{i18n>tableName}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleCountry}">
                                                <Label text="{i18n>tableCountry}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleCity}">
                                                <Label text="{i18n>tableCity}"/>
                                            </Column>
                                        </columns>

                                        <items>
                                            <ColumnListItem type="Active" 
                                                            press="showOrders2">
                                                <cells>
                                                    <Text text="{jsonEmployees>EmployeeID}"/>
                                                    <Text text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                    <Text text="{jsonEmployees>Country}"/>
                                                    <Text text="{jsonEmployees>City}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>

                                    </Table>

                                </Panel>
                            </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>





</mvc:View>
