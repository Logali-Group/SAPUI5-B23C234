<mvc:View controllerName="employees.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>

                            <HBox>
                                <Label text="{i18n>labelEmployee}"
                                        class="sapUiSmallMargin"/>
                                <Input id="inputEmployee"
                                        maxLength="6"
                                        width="12.5rem"
                                        class="sapUiSmallMarginEnd"
                                        value="{/EmployeeId}"
                                        valueLiveUpdate="true"/>
                                <Label id="label"
                                        text="{i18n>labelCountry}"
                                        class="sapUiSmallMargin"/>
                                <Select id="select"
                                        class="sapUiSmallMarginEnd"
                                        forceSelection="false"
                                        selectedKey="{/CountryKey}"
                                        items="{/ListCountry}">
                                    <core:Item key="{Key}" text="{Text}"/>
                                </Select>
                                <Button id="btnFilter"
                                        text="{i18n>btnFilter}"
                                        icon="sap-icon://search"
                                        press="onFilter"
                                        class="sapUiSmallMarginEnd"/>
                                <Button id="btnClearFilter"
                                        text="{i18n>btnClearFilter}"
                                        icon="sap-icon://clear-filter"
                                        press="onClear"
                                        class="sapUiSmallMarginEnd"/>
                            </HBox>

                            <HBox>
                                <Panel>
                                    <Table id="tableEmployee"
                                            items="{/Employees}">

                                        <columns>
                                            <Column>
                                                <Label text="{i18n>tableId}"/>
                                            </Column>
                                            <Column>
                                                <Label text="{i18n>tableName}"/>
                                            </Column>
                                            <Column>
                                                <Label text="{i18n>tableCountry}"/>
                                            </Column>
                                            <Column>
                                                <Label text="{i18n>tableCity}"/>
                                            </Column>
                                        </columns>

                                        <items>
                                            <ColumnListItem type="Active" 
                                                            press="showPostalCode">
                                                <cells>
                                                    <Text text="{EmployeeID}"/>
                                                    <Text text="{LastName}, {FirstName}"/>
                                                    <Text text="{Country}"/>
                                                    <Text text="{City}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>

                                    </Table>
                                </Panel>
                            </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>





</mvc:View>
